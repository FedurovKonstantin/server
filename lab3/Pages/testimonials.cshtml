@page
@model TestimonialsModel
@{
    ViewData["Title"] = "Testimonials";
    ViewData["Active"] = "testimonials";
}

<div class="banner-area banner-bg-1">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="banner">
                    <h2>Testimonials</h2>
                    <ul class="page-title-link">
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Testimonials</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="test-box" class="section wb">
    <div class="container">

        <div class="section-title text-center">
            <h3>Send testimonial</h3>
        </div><!-- end title -->

        <div class="row" style="padding-bottom: 30px;">
            <div class="col-md-8 col-md-offset-2">
                <div class="contact_form">
                    <div id="message"></div>
                    <form id="contactform" class="row" name="contactform" method="post">
                        <fieldset class="row-fluid">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <label asp-for="TestimonialsForm.Author"></label>
                                <input asp-for="TestimonialsForm.Author" class="form-control" placeholder="Author" />
                            </div>

                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <label asp-for="TestimonialsForm.Role"></label>
                                <input asp-for="TestimonialsForm.Role" class="form-control" placeholder="Role" />
                            </div>

                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <label asp-for="TestimonialsForm.Quote"></label>
                                <input asp-for="TestimonialsForm.Quote" class="form-control" placeholder="Quote" />
                            </div>

                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <label asp-for="TestimonialsForm.Description"></label>
                                <input asp-for="TestimonialsForm.Description" class="form-control"
                                    placeholder="Description" />
                            </div>

                            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 text-center">
                                <button id="submit"
                                    class="btn btn-light btn-radius btn-brd grd1 btn-block">SEND</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div><!-- end col -->
        </div><!-- end row -->

        <div class="section-title text-center">
            <h3>Testimonials</h3>
            <p class="lead">We thanks for all our awesome testimonials! There are hundreds of our happy customers!
                <br>Let's see what others say about GoodWEB Solutions website template!
            </p>
        </div><!-- end title -->


        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="testi-carousel owl-carousel owl-theme">
                    @foreach (var testimonial in Model.Testimonials)
                    {
                        <div class="testimonial clearfix">
                            <div class="desc">
                                <h3><i class="fa fa-quote-left"></i> @testimonial.quote</h3>
                                <p class="lead">@testimonial.description</p>
                            </div>
                            <div class="testi-meta">
                                <img src="@testimonial.image" alt="" class="img-responsive alignleft">
                                <h4>@testimonial.author <small>- @testimonial.role</small></h4>
                            </div>
                        </div>
                    }
                </div><!-- end carousel -->
            </div><!-- end col -->
        </div><!-- end row -->

    </div><!-- end container -->
</div><!-- end section -->

